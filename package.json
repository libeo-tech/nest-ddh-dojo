{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json --runInBand",
    "typeorm:migration": "ts-node --transpile-only --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./ormconfig.json",
    "typeorm:migration:run": "npm run typeorm:migration migration:run",
    "typeorm:migration:generate": "npm run typeorm:migration migration:generate -- -n",
    "typeorm:migration:revert": "npm run typeorm:migration migration:revert",
    "gql-typings:generate": "ts-node scripts/generate-typings"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.14",
    "@nestjs/common": "^8.4.6",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.6",
    "@nestjs/cqrs": "^8.0.4",
    "@nestjs/graphql": "^10.0.15",
    "@nestjs/platform-express": "^8.4.6",
    "@nestjs/typeorm": "^8.1.2",
    "apollo-server-core": "^3.8.2",
    "apollo-server-express": "^3.8.2",
    "graphql": "^16.5.0",
    "neverthrow": "^4.3.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^16.7.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.4",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "ts-morph": "^15.1.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/core/**/*.ts",
      "!**/*.application.ts",
      "!**/common/**/*.ts",
      "!**/*.ports.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
